
<p><h3 class="card-title">Detalles de Comite de Asignación</h3></p>

<form method="post" action="NextStep" enctype="multipart/form-data">

    <input type="hidden" name="Id" value="@ViewBag.Id" />
    <input type="hidden" name="ExpedienteNna" value="@ViewBag.ExpedienteNna" />

    <div class="row mb-3">
        <div class="col-sm-4">
            <label for="usuario" class="form-label">Usuario:</label>
            <input type="text" class="form-control" name="Usuario" id="usuario">
        </div>
        <div class="col-sm-2">
            <label for="fecha" class="form-label">Fecha:</label>
            <input type="date" class="form-control" name="Fecha" id="fecha">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-6">
            <label for="fecha" class="form-label">Observaciones:</label>
            <textarea class="form-control" style="height: 100px" name="Observaciones" id="observaciones"></textarea>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-6">
            <label for="adjunto" class="form-label">Adjunto:</label>
            <input class="form-control" type="file" accept=".gif,.jpg,.jpeg,.png,.doc,.docx, pdf" name="Adjunto" id="adjunto">
        </div>
    </div>
    <div class="row mb-3">
        <div class="text-left">
            <button type="submit" class="btn btn-outline-primary">Emparejar</button>
            <button type="reset" class="btn btn-secondary">Cancelar</button>
        </div>
    </div>
</form>