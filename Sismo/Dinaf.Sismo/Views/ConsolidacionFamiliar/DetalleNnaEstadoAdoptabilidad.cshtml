@model Dinaf.Sismo.Models.NnaEstadoAdoptabilidadViewModel

@{
}
<section class="section profile">
    
    <div class="row">
        <div class="col-xl-4">
            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                    <img src="~/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                    <h2>@Model.Expediente.Persona.NombreCorto</h2>
                    <h3>Ingeniero de Sofware</h3>
                    <div class="social-links mt-2">
                        <div class="row">
                            <div class="col-lg-9 col-md-4 label "><b>Nombre Completo</b></div>
                            <div class="col-lg-12 col-md-8">@Model.Expediente.Persona.Nombre</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-9 col-md-4 label "><b>identidad</b></div>
                            <div class="col-lg-12 col-md-8">0801-1977-07557</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-9 col-md-4 label "><b>Fecha de Nacimiento</b></div>
                            <div class="col-lg-12 col-md-8">@Model.Expediente.Persona.FechaNacimiento</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-9 col-md-4 label "><b>Edad</b></div>
                            <div class="col-lg-12 col-md-8">@Model.Expediente.Persona.Edad Años</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-9 col-md-4 label "><b>Nacionalidad</b></div>
                            <div class="col-lg-12 col-md-8">@Model.Expediente.Persona.Nacionalidad</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-9 col-md-4 label "><b>Genero</b></div>
                            <div class="col-lg-12 col-md-8">@Model.Expediente.Persona.Genero</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-9 col-md-4 label "><b>Telefono</b></div>
                            <div class="col-lg-12 col-md-8">(+504)9999-9999</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-9 col-md-4 label "><b>Email</b></div>
                            <div class="col-lg-12 col-md-8">CarlosG@hotmail.com</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-8">
            <div class="card">
                <div class="card-body pt-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Información General</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Vulneraciones</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-settings">Medidas de Protección</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-settings">Familia</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-match">Emparejamiento</button>
                        </li>
                    </ul>

                    <div class="tab-content pt-2">
                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                            <span class="badge bg-primary"><i class="bi bi-collection me-1"></i>EXP. @Model.Expediente.NumeroExpediente</span>
                            <h5 class="card-title">Detalles</h5>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Ciudad</div>
                                <div class="col-lg-9 col-md-8">Tegucigalpa</div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 label ">Domicilio Actual</div>
                                <div class="col-lg-9 col-md-8">Villa Olimpica Sector 3, casa 14</div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Educacion</div>
                                <div class="col-lg-9 col-md-8">Educación superior</div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Raza</div>
                                <div class="col-lg-9 col-md-8">
                                    <div class="col-sm-4">
                                        <select class="form-select" aria-label="Default select example">
                                          <option selected>seleccione una opción</option>
                                          <option value="1">One</option>
                                          <option value="2">Two</option>
                                          <option value="3">Three</option>
                                        </select>
                                    </div>
                                    <a href="" type="submit" class="btn btn-primary btn-sm">Guardar</a>
                                    @Model.Expediente.Persona.Raza
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Color de Cabello</div>
                                <div class="col-lg-9 col-md-8">
                                    <div class="col-sm-4">
                                        <select class="form-select" aria-label="Default select example">
                                          <option selected>seleccione una opción</option>
                                          <option value="1">One</option>
                                          <option value="2">Two</option>
                                          <option value="3">Three</option>
                                        </select>
                                    </div>
                                    <<button type="submit" class="btn btn-primary btn-sm">Guardar</button>
                                    @Model.Expediente.Persona.ColorCabello
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Color de Piel</div>
                                <div class="col-lg-9 col-md-8">
                                    <div class="col-sm-4">
                                        <select class="form-select" aria-label="Default select example">
                                          <option selected>seleccione una opción</option>
                                          <option value="1">One</option>
                                          <option value="2">Two</option>
                                          <option value="3">Three</option>
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-sm">Guardar</button>
                                    @Model.Expediente.Persona.ColorPiel
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Color de Ojos</div>
                                <div class="col-lg-9 col-md-8">
                                    <div class="col-sm-4">
                                        <select class="form-select" aria-label="Default select example">
                                          <option selected>seleccione una opción</option>
                                          <option value="1">One</option>
                                          <option value="2">Two</option>
                                          <option value="3">Three</option>
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-sm">Guardar</button>
                                    @Model.Expediente.Persona.ColorOjos
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Rasgos Fisicos</div>
                                <div class="col-lg-9 col-md-8">
                                    <div class="col-sm-4">
                                        <select class="form-select" aria-label="Default select example">
                                          <option selected>seleccione una opción</option>
                                          <option value="1">One</option>
                                          <option value="2">Two</option>
                                          <option value="3">Three</option>
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-sm">Guardar</button>
                                    @Model.Expediente.Persona.SignosFisicos
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane fade profile-edit pt-3" id="profile-edit">
                            <span class="badge bg-primary"><i class="bi bi-collection me-1"></i>EXP. @Model.Expediente.NumeroExpediente</span>
                            <!-- Default Card -->
                            <div class="card">
                                <div class="card-body">
                                    <!-- Default Table -->
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">Fecha de Creacion</th>
                                                <th scope="col">Remitente</th>
                                                <th scope="col">Tipo Vulneración</th>
                                                <th scope="col">Sub-Tipo Vulneración</th>
                                                <th scope="col">Articulo</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var vulneraciones in Model.Vulneraciones.Vulneraciones)
                                            {
                                                <tr>
                                                    <th>@vulneraciones.FechaCreacion</th>
                                                    <td>@vulneraciones.UsuarioRemitente</td>
                                                    <td>@vulneraciones.TipoVulneracion</td>
                                                    <td>@vulneraciones.SubTipoVulneracion</td>
                                                    <td>@vulneraciones.Articulo</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <!-- End Default Table Example -->
                                </div><!-- End Default Card -->
                            </div>
                        </div>

                        <div class="tab-pane fade pt-3" id="profile-settings">
                            <span class="badge bg-primary"><i class="bi bi-collection me-1"></i>EXP. @Model.Expediente.NumeroExpediente</span>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Custodio</th>
                                        <th scope="col">Fecha de Inicio</th>
                                        <th scope="col">Referencias</th>
                                        <th scope="col">Remitente</th>
                                        <th scope="col">Gestion</th>
                                        <th scope="col">Estado</th>
                                        <th scope="col">Unidad Remitente</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var seguimiento in Model.MedidasProteccion.Seguimientos)
                                    {
                                        <tr>
                                            <th>@seguimiento.TipoCustodio</th>
                                            <td>@seguimiento.FechaInicio</td>
                                            <td>@seguimiento.Referencias</td>
                                            <td>@seguimiento.UsuarioRemitente</td>
                                            <td>@seguimiento.TipoGestion</td>
                                            <td>@seguimiento.Estado</td>
                                            <td>@seguimiento.UnidadRemitente</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane fade pt-3" id="profile-settings">
                            <h5 class="card-title">Familia</h5>
                            <p class="small fst-italic">@Model.Expediente.NumeroExpediente</p>
                        </div>
                        <div class="tab-pane fade pt-3" id="profile-match">
                            <h5 class="card-title">Emparejamiento</h5>
                            <p class="small fst-italic">@Model.Expediente.NumeroExpediente</p>
                            <div class="row">
                                <!-- Sales Card -->
                            <div class="col-xxl-4 col-md-6">
                              <div class="card info-card sales-card">
                                <div class="card-body">
                                  <h5 class="card-title">Nombre </h5>

                                  <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                      <i class="bi bi-people"></i>
                                    </div>
                                    <div class="ps-3">
                                      <h6>145</h6>
                                      <span class="text-success small pt-1 fw-bold">12%</span> <span class="text-muted small pt-2 ps-1">increase</span>

                                    </div>
                                  </div>
                                </div>

                              </div>
                            </div><!-- End Sales Card -->

                            <!-- Revenue Card -->
                            <div class="col-xxl-4 col-md-6">
                              <div class="card info-card revenue-card">
                                  <div class="card-body">
                                  <h5 class="card-title">Revenue <span>| This Month</span></h5>
                                  <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                      <i class="bi bi-people"></i>
                                    </div>
                                    <div class="ps-3">
                                      <h6>$3,264</h6>
                                      <span class="text-warning small pt-1 fw-bold">8%</span> <span class="text-muted small pt-2 ps-1">increase</span>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div><!-- End Revenue Card -->

                            <!-- Customers Card -->
                            <div class="col-xxl-4 col-md-6">

                              <div class="card info-card customers-card">
                                  <div class="card-body">
                                  <h5 class="card-title">Customers <span>| This Year</span></h5>

                                  <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                      <i class="bi bi-people"></i>
                                    </div>
                                    <div class="ps-3">
                                      <h6>1244</h6>
                                      <span class="text-danger small pt-1 fw-bold">12%</span> <span class="text-muted small pt-2 ps-1">decrease</span>

                                    </div>
                                  </div>

                                </div>
                              </div>

                            </div><!-- End Customers Card -->
                            </div>                               
                        </div>
                    </div><!-- End Bordered Tabs -->
                </div>
            </div>
        </div>
    </div>
</section>